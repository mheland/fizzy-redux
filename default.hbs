<!DOCTYPE html>
<html lang="{{@site.locale}}" class="has-spaced-navbar-fixed-top">

<head>
    {{!-- Document Settings --}}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{!-- Base Meta --}}
    <title>{{meta_title}}</title>
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes" />
    
    {{!-- This tag outputs SEO meta + structured data and Code injections in Site Header--}}
    {{ghost_head}}

    {{!-- main css --}}
    <link rel="stylesheet" type="text/css" href="{{asset 'css/main.css'}}" />

    {{!-- Google Fonts--}}
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,600,700&display=swap" rel="stylesheet">


    {{!-- Bulma v0.7.5 --}}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.4/css/bulma.min.css" rel="stylesheet">
   
    {{!-- Prismjs: css--}}
    <link rel="stylesheet" type="text/css" href="{{asset "css/prism.css"}}" />

    {{!-- YouTube light embed: js--}}
    <script type="text/javascript" src="{{asset "js/light-yt.js"}}"></script>

</head>

<body class="has-background-light-line"  >

    {{!-- header --}}
    {{> header}}

    {{!-- body --}}
    {{{body}}}

    {{!-- foot --}}
    {{> footer}}

    {{!-- ghost-search --}}
    <script src="https://cdn.jsdelivr.net/npm/@tryghost/content-api@1.11.4/umd/content-api.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"  ></script>
	

    {{!-- SearchIn Ghost --}}

    <script src="{{asset 'js/searchinghost.min.js'}}"></script>

    <script>
        var searchinGhost = new SearchinGhost({
            key: search_key,
            postsFields: ['title', 'url', 'published_at'],
            postsExtraFields: [],
            postsFormats: [],
            indexedFields: ['title'],
            template: function(post) {
                return `<a href="${post.url}">${post.title}</a><br><div id="search-results-date" class="is-uppercase is-size-7">${post.published_at}</div>`
            }
        });
    </script>


    {{!-- This tag outputs Code injections in Site Footer--}}
    {{ghost_foot}}

    {{!-- gallery popup DISABLED --}}
    {{!-- <script src="{{asset 'js/popup.min.js'}}"></script> --}}
    
    {{!-- import js --}}
    <script src="{{asset 'js/main.js'}}"></script>


    {{!-- carousel: js  on homepage --}}
    {{#is "home"}}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js" ></script>
    <script>
        $(document).ready(function(){
            $('#carousel-home').slick({
                autoplay: true,
                infinite: true,
                slidesToShow: 1,
                slidesToScroll: 1,
                autoplaySpeed: 1500,
                arrows:false,
                dots: true,
                centerMode: false,
                focusOnSelect: false,
		fade: true,
		fadeSpeed: 1000
            });
        });      
    </script>
    {{/is}}
    


</body>
</html>